# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=aichpx_db
DB_USER=root
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# Security Configuration
# 강력한 세션 시크릿 키 (최소 32자)
SESSION_SECRET=your_session_secret_key_here_minimum_32_characters_long

# Rate Limiting Configuration
# API 전체 요청 제한 (15분당 최대 요청 수)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 로그인 시도 제한 (15분당 최대 시도 수)
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# Social Login Configuration
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
NAVER_CALLBACK_URL=http://localhost:3001/api/v1/auth/naver/callback

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_CALLBACK_URL=http://localhost:3001/api/v1/auth/kakao/callback

# Client URL (for redirects after social login)
CLIENT_URL=http://localhost:3000

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Additional Security Settings
# 업로드 파일 최대 크기 (MB)
MAX_FILE_SIZE=10

# 로그 레벨 (error, warn, info, debug)
LOG_LEVEL=info

# 프로덕션 환경에서 필수 체크할 환경 변수들
# JWT_SECRET (최소 32자)
# SESSION_SECRET (최소 32자)
# DB_PASSWORD
# SMTP_PASS (이메일 기능 사용 시)

# Google Gemini AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key
